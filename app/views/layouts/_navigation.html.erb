<section>
  <div class="flex p-2" id="mask_group">
    <p class="text-white mx-auto text-dm">Save up to $500 per year on millions of book titles!</p>
  </div>
</section>
<nav class="relative container mx-auto p-6">
  <div class="flex items-center justify-between">
    <div class="pt-2">
      <%= link_to root_path do %>
         <%= image_tag('sample_logo.svg') %>
      <% end %>
    </div>
    <div class="flex items-center">
      <%= form_with(url: books_path(id: 'placeholder'), method: :get, local: true, id: 'search-form', html: { class: 'search-form', onsubmit: 'updateFormAction(event)' }) do %>
        <%= text_field_tag :id, nil, placeholder: '  Search', id: 'search-input', class: 'flex-1 px-4 rounded-full focus:outline-none' %>
      <% end %>
      <%= image_tag('icon_feather_search.svg', :class=>"absolute mr-2 w-5") %>
    </div>
    <div class="hidden md:flex space-x-6 items-center">
      <%= link_to 'Home', root_path %>
      <%= link_to 'Rent Textbooks', root_path %>
      <%= link_to 'Buy Textbooks', root_path %>
      <%= link_to 'Sell Textbooks', root_path %>
      <div class="flex items-center">
        <%= image_tag('icon_feather_globe.svg', :class=>"pr-1") %> En
      </div>
      <a href="#" class="p-3 px-6 pt-2 text-white bg-blue-600 rounded-lg baseline hover:bg-blue-500">
        Contact
      </a>
    </div>
    <!-- hamburger icon -->
    <button type="button" name="button" id="menu-btn" class="block hamburger md:hidden focus:outline-none">
      <span class="hamburger-top"></span>
      <span class="hamburger-middle"></span>
      <span class="hamburger-bottom"></span>
    </button>
  </div>
  <div class="md:hidden">
    <div class="absolute flex-col items-center hidden self-end py-8 mt-10 space-y-6 font-bold bg-white left-6 right-6 drop-shadow-md sm:w-auto sm:self-center" id="menu">
      <%= link_to 'Home', root_path %>
      <%= link_to 'Rent Textbooks', root_path %>
      <%= link_to 'Buy Textbooks', root_path %>
      <%= link_to 'Sell Textbooks', root_path %>
    </div>
  </div>
</nav>

<script>
  function updateFormAction(event) {
    event.preventDefault();
    var form = document.getElementById('search-form');
    var input = document.getElementById('search-input');
    var newAction = form.action.replace('placeholder', encodeURIComponent(input.value));
    window.location.href = newAction;
  }
</script>
